@model IEnumerable<Bibliotech.Models.Livro>

@{
    ViewData["Title"] = "Livros";
}

<h1>Livros</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<div class="container d-flex justify-content-around flex-wrap">

    @foreach (var item in Model)
    {
        <div class="p-2" style="width: 9rem;">
            <div class="card-img-top" style="width: 100%; height: 11rem;">
                <img  style="width: 100%; height:100%; object-fit: cover; object-position: center;" src="https://nivalmix.vteximg.com.br/arquivos/ids/192923-1000-1000/livro-o-pequeno-principe-principis.jpg?v=637592871872770000" alt="...">
            </div>
            <div class="m-0">
                <h5 class="inter-medium m-0">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </h5>
                <p class="inter-regular m-0 text-secondary">
                    @Html.DisplayFor(modelItem => item.Autor.Nome)
                </p>
                <p class="inter-light">
                    <small class="text-secondary">
                        @Html.DisplayFor(modelItem => item.AnoLancamento)
                    </small>
                </p>
            </div>
        </div>
    }
</div>
